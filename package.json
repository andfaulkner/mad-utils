{
  "name": "mad-utils",
  "version": "0.56.0",
  "description": "A set of misc utilties I find myself repeatedly re-writing between projects.",
  "main": "lib/shared.js",
  "typings": "lib/shared",
  "files": [
    "lib/",
    "scss/",
    ".util-styles.scss",
    "root.scss"
  ],
  "scripts": {
    "boilerplate-check": "./script/ensure-fully-implemented.rb",
    "compile-ts": "tsc -p tsconfig.json",
    "prepublish": "npm run compile-ts",
    "publish": "./script/publish-mad-utils",
    "setup": "yarn; git remote remove origin; npm run compile-ts",
    "start": "npm run watch-test",
    "test": "npm run compile-ts; mocha --opts test/mocha.opts test/",
    "test-coverage": "npm run compile-ts; nyc npm test",
    "watch-compile-ts": "tsc -p tsconfig.json --watch",
    "watch-test": "chokidar ./test/** ./src/** ./*.ts -i *.d.ts -i \"/.*.((d.ts)|(js)|(map)|(opts)|(json)|(md))$/\" --initial -c \"npm run test\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andfaulkner/mad-utils.git#v0.56.0"
  },
