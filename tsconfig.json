{
    "version": "2.2.1",
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "outDir": "lib/",
        "declaration": true,
        "target": "ES5",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "preserve",
        "pretty": true,
        "lib": ["ES2015", "DOM"]
    },
    "exclude": [
        "*.js",
        "*.json"
    ],
    "include": [
        "./node.ts",
        "./shared.ts",
        "./react.ts",
        "./browser.ts",
        "./typings/shared.d.ts",
        "./src/*.ts",
        "./src/node/*.ts",
        "./src/browser/*.ts",
        "./src/array-collection.ts",
        "./src/types.ts",
        "./node_modules/mad-logs/lib/node.d.ts"
    ]
}
