{
    "extends": ["tslint:recommended"],

    "rulesDirectory": [
        "node_modules/tslint-eslint-rules/dist/rules",
        "node_modules/tslint-microsoft-contrib",
        "node_modules/vrsource-tslint-rules/rules"
    ],

    "rules": {
        "array-type": [true, "array-simple"],
        "arrow-parens": false,
        "block-spacing": [true, "always"],
        "brace-style": [true, "1tbs", { "allowSingleLine": true }],
        "chai-prefer-contains-to-index-of": true,
        "class-name": true,
        "comment-format": [false, "check-space"],
        "conditional-expression-parens": false,
        "curly": false,
        "forin": true,
        "handle-callback-err": [true, "^(e|err|error)$"],
        "import-blacklist": [true, "react-toolbox"],
        "indent": [true, "spaces"],
        "interface-name": [true, "never-prefix"],
        "label-position": true,
        "max-file-line-count": [true, 400],
        "max-line-length": [true, 100],
        "max-classes-per-file": [true, 5],
        // Requires explicit visibility declarations for class members
        "member-access": false,
        "member-ordering": false,
        "new-parens": true,
        "no-angle-bracket-type-assertion": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": [false],
        "no-constant-condition": true,
        "no-construct": true,
        "no-control-regex": true,
        "no-default-export": true,
        "no-duplicate-case": true,
        "no-duplicate-imports": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-empty-character-class": true,
        "no-empty-line-after-opening-brace": true,
        // Forbids empty interfaces
        "no-empty-interface": false,
        "no-eval": true,
        "no-ex-assign": true,
        "no-extra-semi": true,
        "no-function-constructor-with-string-args": true,
        "no-implicit-dependencies": false,
        "no-inferrable-types": [true, "ignore-params"],
        "no-inner-declarations": true,
        "no-internal-module": false,
        "no-invalid-this": false,
        "no-invalid-regexp": true,
        "no-magic-numbers": [
            true,
            -2, -1, 0, 1, 2, 3, 4,
            10, 100, 1000,
            -10, -100, -1000,
            45, 90, 135, 180, 225, 270, 315, 360, // angles
            80, 8080 // ports
        ],
        "no-mergeable-namespace": false,
        "no-octal-literal": true,
        "no-param-reassign": true,
        "no-reference": false,
        "no-regex-spaces": true,
        "no-shadowed-variable": [
            true,
            {
                "class": true,
                "enum": true,
                "function": false,
                "interface": false,
                "namespace": true,
                "typeAlias": false,
                "typeParameter": false

            }
        ],
        "no-sparse-arrays": true,
        "no-string-based-set-interval": true,
        "no-string-based-set-immediate": true,
        "no-string-based-set-timeout": true,
        "no-string-literal": false,
        "no-submodule-imports": false,
        "no-switch-case-fall-through": true,
        "no-this-assignment": [true, {"allowed-names": ["^self$"], "allow-destructuring": true}],
        "no-trailing-whitespace": true,
        "no-unexpected-multiline": true,
        "no-unnecessary-bind": true,
        "no-unnecessary-class": true,
        "no-unnecessary-field-initialization": true,
        "no-unsafe-finally": true,
        "no-unused-expression": true,
        "no-unused-variable": [true, "react", {
            "ignore-pattern": "^((_)|(React))"
        }],
        "no-use-before-declare": true,
        "no-var-keyword": true,
        "no-var-requires": false,
        "no-var-self": false,
        "no-with-statement": true,
        "object-literal-shorthand": true,
        "object-literal-sort-keys": false,
        "one-line": [
            true,
            "check-catch",
            "check-finally",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "one-variable-per-declaration": true,
        "only-arrow-functions": [false, "allow-declarations", "allow-named-functions"],
        "ordered-imports": false,
        "prefer-const": true,
        "prefer-literal": [true, "object", "function"],
        "promise-must-complete": true,
        "quotemark": [false, "single", "avoid-escape"],
        "radix": false,
        "semicolon": [true, "ignore-interfaces", "ignore-bound-class-methods"],
        "trailing-comma": [true, {
            "multiline": {
                "objects": "always",
                "arrays": "always",
                "functions": "ignore",
                "typeLiterals": "always"
            },
            "singleline": "ignore",
            "esSpecCompliant": true
        }],
        "triple-equals": [true, "allow-null-check"],
        "typedef-whitespace": [
            true, {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "unified-signatures": false,
        "use-isnan": true,
        "valid-typeof": true,
        "variable-name": [
            true,
            "check-format",
            "ban-keywords",
            "allow-leading-underscore",
            "allow-trailing-underscore",
            "allow-pascal-case"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    }
}
